{
  "name": "github-bot",
  "description": "service to automate some repetitive tasks using our bot account(s)",
  "license": "MIT",
  "author": "dsmJS",
  "maintainers": [
    "Matt Travi <npm@travi.org> (https://matt.travi.org/)"
  ],
  "repository": "dsmjs/github-bot",
  "bugs": "https://github.com/dsmjs/github-bot/issues",
  "homepage": "https://github.com/dsmjs/github-bot#readme",
  "scripts": {
    "lint:md": "globstar --node -- markdownlint **/*.md",
    "tests:integration": "cucumber.js test/integration --compiler js:babel-register --tags 'not @wip'",
    "tests:integration:debug": "DEBUG=test run-s tests:integration",
    "tests:integration:wip": "cucumber.js test/integration --compiler js:babel-register --tags @wip",
    "test": "run-s lint:* tests:*",
    "commitmsg": "validate-commit-msg",
    "precommit": "npm test",
    "build": "babel src --out-dir lib",
    "start": "node lib/index.js",
    "postinstall": "run-s build",
    "greenkeeper:update-lockfile": "greenkeeper-lockfile-update",
    "greenkeeper:upload-lockfile": "greenkeeper-lockfile-upload"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": "8.1.4"
  },
  "devDependencies": {
    "@travi/any": "1.4.0",
    "babel-cli": "6.26.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.6.0",
    "babel-register": "6.26.0",
    "chai": "4.1.1",
    "cucumber": "3.0.0",
    "cz-conventional-changelog": "2.0.0",
    "globstar": "1.0.0",
    "greenkeeper-lockfile": "1.8.1",
    "http-status-codes": "1.2.0",
    "husky": "0.14.3",
    "markdownlint-cli": "0.3.1",
    "mocha": "3.5.0",
    "npm-run-all": "4.0.2",
    "nyc": "11.1.0",
    "validate-commit-msg": "2.14.0"
  },
  "dependencies": {
    "dotenv-safe": "4.0.4",
    "glue": "4.2.0",
    "good": "7.3.0",
    "good-console": "6.4.0",
    "good-squeeze": "5.0.2",
    "hapi-github-webhooks": "1.0.3",
    "hapi-greenkeeper-keeper": "1.2.3"
  }
}
